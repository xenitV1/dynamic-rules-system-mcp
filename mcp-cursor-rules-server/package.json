{
  "name": "mcp-cursor-rules-server",
  "version": "1.0.0",
  "description": "Global MCP server with gatekeeper, configurable preferences, multi-platform support (Cursor, Cline, Windsurf, Continue). Turkish/English communication, quality gates, auto-discovery.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-cursor-rules-server": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cursor",
    "cline",
    "windsurf",
    "continue",
    "gatekeeper",
    "quality-gates",
    "configurable",
    "multi-platform",
    "typescript",
    "ai",
    "coding-rules",
    "code-quality"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "mcp": {
    "capabilities": [
      "tools",
      "resources",
      "prompts"
    ],
    "gatekeeper": true,
    "autoload": true,
    "priority": 100
  },
  "author": "Mehmet (Xenit)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xenitV1/cursor-dynamic-rules-system-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/xenitV1/cursor-dynamic-rules-system-mcp/issues"
  },
  "homepage": "https://github.com/xenitV1/cursor-dynamic-rules-system-mcp",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ]
}
